{
  "name": "electron-scripts",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "cd ./packages/es-template && yarn run start",
    "build": "cd ./packages/es-template && yarn run build",
    "test": "node scripts/test.js",
    "lerna": "lerna"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mesamo/electron-scripts.git"
  },
  "keywords": [
    "electron"
  ],
  "author": "Mesamo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Mesamo/electron-scripts/issues"
  },
  "homepage": "https://github.com/Mesamo/electron-scripts#readme",
  "jest": {
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/scripts/testSetup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.spec.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "eslint": "^7.7.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^26.4.2",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1"
  }
}
